@model bool
@{
    ViewData["Title"] = "Potwierdzenie wysłania maila";
}


<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card text-center">
                <div class="card-header">
                    <h3>@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    @{
                        if (Model)
                        {
                            <p>
                                Sprawdź maila aby zresetować hasło.
                            </p>
                        }
                        else
                        {
                            <p class="text-danger">
                                Nie można wysłać maila resetującego. Możliwe tylko dla istniejących i potwierdzonych adresów.
                            </p>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>