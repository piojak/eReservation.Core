@model ExternalLoginViewModel
@{
    ViewData["Title"] = "Zarejestruj";
}

<h2>@ViewData["Title"]</h2>
<h4>Połącz swoje konto @ViewData["LoginProvider"].</h4>
<hr />

<p class="text-info">
    Pomyślnie zalogowano przez <strong>@ViewData["LoginProvider"]</strong>.
    Wpisz swój adres email dla tej strony poniżej oraz kliknij przycisk zarejestruj aby zakończyć logowanie.
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-action="ExternalLoginConfirmation" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Prześlij</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
